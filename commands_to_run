# LONG WHOLE TRAINING DATA
CUDA_INVISIBLE_DEVICES=2 python2 sentiment.py --system_to_run="FF" --nb_exm=8530 --epochs=5 --hid_step_sz=8530 --init_lr=0.01  --dec_step=100 --lrdf=0.99


